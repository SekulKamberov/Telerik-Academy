::selection
  background rgba(187, 255, 183, 0.5);
  color #218214
.reveal
  background: black
  background-image url('../../css/imgs/dark-bg.png')
  background-repeat no-repeat
  .slides
    height 100%
    font-size 47px
    strong
    a
      color rgb(119, 179, 0)      
    strong
      font-weight normal
    a
      text-decoration underline
    .hljs 
      background rgba(250, 250, 250, 0.85);
      border-radius 15px
      padding 15px
      color #333
      max-height 100%    
    section
      padding 15px
      padding-top 25px
      color rgb(235, 255, 210)
      height 100%
      background-image url('../../css/imgs/logo.png')
      background-repeat no-repeat, no-repeat
      text-align left
      text-shadow 3px 3px 10px black
      li
        li
          font-size 0.9em        
      code
        color rgb(218, 237, 242)
        text-shadow 3px 3px 3px black
      pre code
        text-shadow none   
      section
          background-image url('../../css/imgs/bg-dark.png')
      h1
      h2
        color rgb(204, 255, 51)
        text-shadow 3px 3px 5px black      
        width 85%
        margin-left 10%
        text-transform none
        text-align right
      h1
        font-size 1.3em
        margin-bottom 5px
      h2
        color rgb(250, 247, 200)
        font-size 1.3em
        margin-top 10px
    .slide-title
      background-position top left, bottom right
      background-repeat no-repeat, no-repeat
      h1
      h1
        width 100% 
        margin-top 100px
        margin-left 0
        font-size 1.4em
      h2
        margin-top 25px
        margin-left 20px
        font-size 1.1em
        width 100%          
    .slide-section
      text-align center
      h1
      h2
        width 100%
        text-align center
        margin-left 0
      h1
        margin-top 20%
        font-size 1.7em
      h2 
        margin-top 25px
        font-size 1.1em
     &.slide-questions
       font-size 1em
    .slide-questions
      h1
        text-align right
      h2
        margin-top 15%
        text-align center
        font-size 1.9em     
    .signature
      float right
      position fixed
      bottom 30px
      text-align left
    .signature-course
      color rgb(115, 153, 0)
      font-size 1.05em
      font-weight bold
      line-height 21px
    .signature-initiative
      color rgb(245, 255, 214)
      font-size 0.9em
      line-height 25px
      padding-top 10px
      margin-bottom 0
    .signature-link
      color rgb(115, 153, 0)
      font-size: 0.85
      text-decoration underline
      line-height 10px
      
    .balloon
      display inline-block
      position absolute
      padding 5px 15px
      font-size 25px
      border 2px solid rgb(245, 255, 224)
      border-radius 15px
      background rgb(159, 132, 113)